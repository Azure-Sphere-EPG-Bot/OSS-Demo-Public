{
  "version": "1.0",
  "tasks": [
    {
      "taskType": "trigger",
      "capabilityId": "IssueResponder",
      "subCapability": "PullRequestResponder",
      "version": "1.0",
      "config": {
        "conditions": {
          "operator": "and",
          "operands": [
            {
              "name": "activitySenderHasPermissions",
              "parameters": {
                "permissions": "none",
                "association": "NONE"
              }
            }
          ]
        },
        "eventType": "pull_request",
        "eventNames": [
          "pull_request",
          "issues",
          "project_card"
        ],
        "taskName": "Test FabricBot PR comment task",
        "actions": [
          {
            "name": "addReply",
            "parameters": {
              "comment": "Hi ${issueAuthor}, this is a test comment that should only be sent to non-AzureSphere team members."
            }
          }
        ]
      }
    }
  ],
  "userGroups": []
}
